<Window x:Class="WpfPainter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPainter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <StackPanel Orientation="Horizontal">
                <Button Content="Select" Command="{Binding SelectCommand}"/>
                <Button Content="Rectangle" Command="{Binding RectangleCommand}"/>
                <Button Content="Ellipse" Command="{Binding EllipseCommand}"/>
                <Button Content="Brush" Command="{Binding BrushCommand}"/>
                
            </StackPanel>
        </Grid>
        <local:CanvasView x:Name="CanvasView" Grid.Row="1"/>
    </Grid>
</Window>
